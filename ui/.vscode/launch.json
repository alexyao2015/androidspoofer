  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Start Dev Server and Launch Chrome",
      "configurations": ["Start Dev Server", "Launch Chrome"],
      "stopAll": true
    }
  ]
}
